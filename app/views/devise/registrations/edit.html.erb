<%= header 'Editar Conta' %>
<div class="row">
  <div class="col-md-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Email:', class: 'form-control' %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-notice">Aguardando confirmação para: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autocomplete: "off",
          placeholder: "Nova Senha: (em branco para não alterar, mínimo #{@minimum_password_length} caracteres)",
          class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
          placeholder: 'Confirme a nova senha:', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :current_password, class: 'sr-only' %>
      <%= f.password_field :current_password, autocomplete: "off",
          placeholder: 'Senha atual: (necessária para confirmar as mudanças)', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit "Gravar Mudanças", class: 'btn btn-primary btn-lg' %>
      <%= link_to "Excluir Conta", registration_path(resource_name),
          data: { confirm: "Tem certeza? Não será possível reverter essa ação!" },
          method: :delete, class: 'btn btn-danger btn-lg' %>
    </div>
    <% end %>
  </div>
</div>
