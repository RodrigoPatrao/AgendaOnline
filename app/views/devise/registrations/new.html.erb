<% header "Criar Usuário" %>
<div class="row">
  <div class="col-md-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name,
      placeholder: 'Nome de Usuário:', autofocus: true, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, autocomplete: "off", placeholder: 'Email:', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, autocomplete: "off",
      placeholder: "Senha (mínimo #{@minimum_password_length} caracteres):",
      class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <%= f.password_field :password_confirmation, autocomplete: "off",
      placeholder: 'Confirme a senha:', class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.submit "Criar Usuário", class: 'btn btn-primary btn-lg' %>
    </div>
    <% end %>

  </div>
</div>
<div class="row">
  <div class="col-md-7">
    <%= render "devise/shared/links" %>
  </div>
</div>
